{
  "name": "tree-sitter-tako",
  "version": "1.0.0",
  "description": "A tree-sitter parser for Tako",
  "main": "bindings/node",
  "types": "bindings/node",
  "scripts": {
    "install": "node-gyp-build",
    "build": "tree-sitter generate",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js && tree-sitter test",
    "watch": "when-changed -s -1 -r grammar.js test/ -c 'npm run build && npm run test'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cypher1/tako.git"
  },
  "keywords": [
    "parser"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "author": "Jay Pratt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Cypher1/tako/issues"
  },
  "homepage": "https://github.com/Cypher1/tako#readme",
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "prebuildify": "^6.0.1",
    "tree-sitter-cli": "^0.23.0"
  },
  "tree-sitter": [
    {
      "scope": "source.tako",
      "injection-regex": "(tako|tk)",
      "file-types": [
        "tk"
      ],
      "file-line-regex": "#!.*\\btako$"
    }
  ],
  "dependencies": {
    "node-gyp-build": "^4.8.1"
  }
}
